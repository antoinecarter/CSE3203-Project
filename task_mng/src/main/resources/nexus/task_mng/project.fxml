<?import javafx.scene.text.Font?>

<HBox alignment="CENTER_LEFT" prefHeight="59.0" prefWidth="200.0" spacing="10.0" style="-fx-background-color: #00C9A7; -fx-background-radius: 5px;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nexus.task_mng.controllers.projectController">
