            <Font name="System Bold" size="14.0" />
         </font>
      </MFXButton>
      <MFXButton prefHeight="60.0" prefWidth="142.0" rippleAnimateBackground="false" style="-fx-background-color: #00C9A7;">
         <graphic>
            <VBox alignment="CENTER_LEFT" prefHeight="52.0" prefWidth="132.0" spacing="10.0">
               <children>
                  <Label fx:id="p_name" prefHeight="21.0" prefWidth="132.0" text="Project Name:">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
                  <Label fx:id="p_status" prefHeight="21.0" prefWidth="133.0" text="Status">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </graphic>
      </MFXButton>
   </children>
